import {
    LineEdit,
    VerticalBox,
    HorizontalBox,
    ScrollView,
} from "std-widgets.slint";
import { State } from "state.slint";

export component Canvas inherits ScrollView {
    property <image> source: State.current-image.source;

    VerticalLayout {
        alignment: center;

        HorizontalLayout {
            alignment: center;

            Image {
                source: root.source;
                width: root.source.width * 1px;
                height: root.source.height * 1px;
            }
        }
    }
}
